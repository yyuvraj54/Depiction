<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Channel">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="bottom"
            android:background="@drawable/gradient_nav"


            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="50dp"

                    android:fontFamily="sans-serif-black"
                    android:text="Public Channels"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/architects_daughter"
                    android:text="Have a look at our Wallpapers collections." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:src="@drawable/people" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Categories"
                    android:textSize="17sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|center_horizontal"
                        android:orientation="horizontal">




                        <androidx.cardview.widget.CardView
                            android:id="@+id/Animewall"
                            android:layout_width="130dp"
                            android:layout_height="220dp"
                            android:layout_margin="10dp"
                            android:elevation="15dp"
                            android:scaleType="fitXY"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/animephoto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/animew" />

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="10dp"

                                android:fontFamily="sans-serif-black"
                                android:text="Anime"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/CartoonWall"
                            android:layout_width="130dp"
                            android:layout_height="220dp"
                            android:layout_margin="10dp"
                            android:elevation="15dp"
                            android:scaleType="fitXY"
                            app:cardCornerRadius="10dp">


                            <ImageView
                                android:id="@+id/imageViewcartoon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/cartoon" />

                            <TextView
                                android:id="@+id/cartoontext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="10dp"

                                android:fontFamily="sans-serif-black"
                                android:text="Cartoons"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/Ambientwall"
                            android:layout_width="130dp"
                            android:layout_height="220dp"
                            android:layout_margin="10dp"
                            android:elevation="15dp"
                            android:scaleType="fitXY"
                            app:cardCornerRadius="10dp">


                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/ambient" />

                            <TextView
                                android:id="@+id/textView143"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="10dp"

                                android:fontFamily="sans-serif-black"
                                android:text="Amoled"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp" />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/Gradient"
                            android:layout_width="130dp"
                            android:layout_height="220dp"
                            android:layout_margin="10dp"
                            android:elevation="15dp"
                            android:scaleType="fitXY"
                            app:cardCornerRadius="10dp">



                            <ImageView
                                android:id="@+id/imageViewgradient"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/grasolid" />


                            <ImageView
                                android:id="@+id/imageView2343"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/depiction" />

                            <TextView
                                android:id="@+id/gradienttext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="10dp"

                                android:fontFamily="sans-serif-black"
                                android:text="Gradient/Solid"
                                android:textColor="#FFFFFF"
                                android:textSize="17sp" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/coolwall"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_margin="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:elevation="15dp"
                        android:scaleType="fitXY"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/defaultcardimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/special" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:src="@drawable/depiction" />

                        <TextView
                            android:id="@+id/textView140"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="10dp"

                            android:fontFamily="sans-serif-black"
                            android:text="Depiction Special"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">



                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="Channels"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBarChannel"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/channelRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:reverseLayout="true"

                        android:orientation="horizontal" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>