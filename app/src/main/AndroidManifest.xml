<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/depiction"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Depiction"
        tools:targetApi="31">
        <activity
            android:name=".Activities.inbuildChannel"
            android:exported="false" />
        <activity
            android:name=".Activities.DeleteImage"
            android:exported="false" />
        <activity
            android:name=".Activities.AboutApp"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Fragments.ProfileChannel"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.FullImageActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>